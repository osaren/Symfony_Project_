{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table">
        <tbody>
        {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
        {% else %}
        {% endif %}
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.author }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('book_index') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_STAFF')  %}
        <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>
        {{ include('book/_delete_form.html.twig') }}
    {% else %}
    {% endif %}
{% endblock %}
