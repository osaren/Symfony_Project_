{% extends 'base.html.twig' %}

{% block title %}Club{% endblock %}

{% block body %}
    <h1>Club</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ club.id }}</td>
            </tr>
            <tr>
                <th>ClubName</th>
                <td>{{ club.clubName }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_STAFF') or is_granted('ROLE_USER') or is_granted('ROLE_MEMBER') %}
        <a href="{{ path('member_club_list') }}">back to list</a>
    {% else %}
        <a href="{{ path('club_index') }}">back to list</a>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_STAFF')  %}
        <a href="{{ path('club_edit', {'id': club.id}) }}">edit</a>
        {{ include('club/_delete_form.html.twig') }}
    {% else %}
    {% endif %}
{% endblock %}
