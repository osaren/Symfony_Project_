{% extends 'base.html.twig' %}

{% block title %}USER HOMEPAGE!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if is_granted('ROLE_ADMIN') %}
        <h1>Admin HOMEPAGE</h1>
    {% elseif is_granted('ROLE_STAFF') %}
        <h1>Staff HOMEPAGE</h1>
    {% elseif is_granted('ROLE_MEMBER') %}
        <h1>Member HOMEPAGE</h1>
    {% else %}
    <!-- leave default links for normal users -->
        <h1>User HOMEPAGE</h1>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') %}
        <p>Welcome to the admin page: Use special links to manage entities</p>

    {% elseif is_granted('ROLE_STAFF') %}
        <p>Welcome to the admin page: Use special links to manage entities</p>
        <a href="{{ path('club_index') }}"> Manage Clubs(for staff) </a><br>

    {% else %}
    <!-- leave default links for normal users -->
    {% endif %}

    <!-- use path for links -->
    <!-- use twig filter to filter certain links -->
    <a href="{{ path('member_club_list') }}"> Club List </a><br>

    <a href="{{ path('app_logout') }}"> Logout </a><br>
</div>
{% endblock %}
